# MFT Trading Bot - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# =============================================================================
# BINANCE API CREDENTIALS
# =============================================================================

# Binance Testnet (for testing - get from testnet.binancefuture.com)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Binance Live (for production - EXTREME CAUTION!)
# BINANCE_API_KEY=your_live_api_key_here
# BINANCE_API_SECRET=your_live_api_secret_here

# =============================================================================
# DATA SOURCE API KEYS (Optional - most have free tiers)
# =============================================================================

# Alpha Vantage (free tier: 500 requests/day)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# CoinMarketCap (free tier: 10k credits/month)
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_key_here

# CryptoCompare (free tier available)
# Get from: https://min-api.cryptocompare.com/
CRYPTOCOMPARE_API_KEY=your_cryptocompare_key_here

# =============================================================================
# WEB3 RPC ENDPOINTS (Optional - for on-chain data)
# =============================================================================

# Ethereum RPC endpoint (use Infura, Alchemy, or local node)
ETH_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id

# Polygon RPC endpoint
POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# DATABASE & STORAGE (Future Phase - not yet implemented)
# =============================================================================

# PostgreSQL connection (Phase 2)
# DATABASE_URL=postgresql://user:password@localhost:5432/mft_trading

# Redis connection (Phase 2)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable audit logging for compliance
ENABLE_AUDIT_LOGGING=true

# Audit log directory (must have write permissions)
AUDIT_LOG_DIR=./logs/audit

# =============================================================================
# RISK MANAGEMENT OVERRIDES (Optional)
# =============================================================================

# Maximum daily loss in USD (default: 100)
# MAX_DAILY_LOSS_USD=100

# Maximum number of trades per day (default: 20)
# MAX_TRADES_PER_DAY=20

# Maximum position size in USD (default: 1000)
# MAX_POSITION_USD=1000

# Kill switch file path (trading stops if this file exists)
# KILL_SWITCH_FILE=./STOP_TRADING

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Set to 'true' to use paper trading mode
PAPER_TRADING=true

# Set to 'true' to enable debug mode
DEBUG=false

# Test environment marker
TESTING=false

# =============================================================================
# NOTES
# =============================================================================
#
# 1. **Security**: NEVER commit .env to git. It's in .gitignore by default.
#
# 2. **Testnet First**: Always test with BINANCE_TESTNET credentials before
#    using live API keys.
#
# 3. **API Key Permissions**: Ensure Binance API keys have ONLY the minimum
#    required permissions:
#    - Testnet: Enable Trading
#    - Live: Enable Reading + Enable Trading (NO Enable Withdrawals!)
#
# 4. **Kill Switch**: Create the file specified in KILL_SWITCH_FILE to
#    immediately halt all trading.
#
# 5. **Free Tiers**: Most data sources have generous free tiers. Paid plans
#    only needed for high-frequency trading.
#
# 6. **Validation**: Run `python tools/validate_environment.py` to check
#    your configuration before trading.
#
# =============================================================================
